<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.davidroach.assignment2simon.Start">

    <TextView
        android:text="@string/start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_game_tv"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_alignBottom="@+id/startGameButton"
        android:layout_alignEnd="@+id/red_button"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="25dp" />

    <TextView
        android:text="@string/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/click_to_tv"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_alignTop="@+id/start_game_tv"
        android:layout_alignStart="@+id/green_button"
        android:layout_marginStart="22dp" />

    <ImageButton
        android:layout_height="wrap_content"
        android:src="@drawable/red_butto"
        android:background="@color/colorBlack"
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/blue_color"
        android:background="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blue_button"
        android:minHeight="80dp"
        android:minWidth="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/red_button" />

    <Button
        android:text="@string/yellow_color"
        android:background="@color/colorYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yellow_button"
        android:minHeight="80dp"
        android:minWidth="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/green_button" />

    <Button
        android:text="@string/green_color"
        android:background="@color/colorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/green_button"
        android:minHeight="80dp"
        android:minWidth="180dp"
        android:layout_marginStart="26dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/score_tv" />

    <Button
            android:text="@string/red_color"
            android:background="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/red_button"
        android:minHeight="80dp"
            android:minWidth="180dp"
        android:layout_marginStart="38dp"
        android:layout_alignBaseline="@+id/green_button"
        android:layout_alignBottom="@+id/green_button"
        android:layout_toEndOf="@+id/green_button" />

    <TextView
            android:text="@string/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score_tv"
            android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
